						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Sarah Johnson\",\n  \"email\": \"sarah@example.com\",\n  \"phone\": \"+1234567890\",\n  \"status\": \"contacted\",\n  \"source\": \"Website\",\n  \"notes\": \"Followed up via email\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/leads/{{lead_id}}",
							"host": ["{{base_url}}"],
							"path": ["leads", "{{lead_id}}"]
						}
